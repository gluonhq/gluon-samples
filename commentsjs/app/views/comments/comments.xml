<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" class="page">
    <Page.actionBar>
        <ActionBar title="Comments" icon="" class="action-bar">
        </ActionBar>
    </Page.actionBar>

    <ListView items="{{ comments }}">
        <ListView.itemTemplate>
            <Label text="{{ comment }}" horizontalAlignment="left" verticalAlignment="center"/>
        </ListView.itemTemplate>>
    </ListView>
</Page>